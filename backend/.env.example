# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=probation_db
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRE=7d

# Firebase Configuration (for Push Notifications)
# Option 1: Provide JSON string directly
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Option 2: Provide path to service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Face Recognition Configuration
FACE_RECOGNITION_ENABLED=false
FACE_RECOGNITION_PROVIDER=mock
FACE_MATCH_THRESHOLD=0.6

# VAPID Keys for Web Push (generate using web-push library)
# VAPID_PUBLIC_KEY=your_vapid_public_key
# VAPID_PRIVATE_KEY=your_vapid_private_key

# CORS Configuration (comma-separated list of allowed origins)
# Development: Leave empty or use localhost URLs
# Production: REQUIRED - specify exact frontend domains
# Example: ALLOWED_ORIGINS=https://probation.gov.kg,https://admin.probation.gov.kg
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:19006

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
