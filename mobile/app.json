{
  "expo": {
    "name": "Пробация КР",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#3b82f6",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.probation.mobile"
    },
    "android": {
      "package": "com.probation.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#3b82f6"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Приложению необходим доступ к местоположению для отслеживания рабочих часов.",
          "locationWhenInUsePermission": "Приложению необходим доступ к местоположению для отслеживания рабочих часов.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Разрешите $(PRODUCT_NAME) доступ к вашей камере для фото-верификации работы."
        }
      ]
    ]
  }
}